<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DraweeRoundedCorners.Drawee" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/drawee_height_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="actualImageScaleType">center</item>
    </style>

    <style name="thumb">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="actualImageScaleType">fitCenter</item>
        <item name="failureImage">@drawable/ic_launcher_background</item>
    </style>

</resources>
